<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	autoDrawBackground="true" width="100" height="50" 
	currentState="{lookLink.status}" toolTip="{lookLink.errorText}">
	
	<fx:Script>
	<![CDATA[
		import com.fTheme.controller.look.LookLink;
		import com.fTheme.controller.look.LookLinkStatus;
		
		[Bindable("dataChange")]
		private var lookLink:LookLink;
		
		override public function set data(value:Object):void
		{
			lookLink = value as LookLink;
			
			super.data = value;
		}
		
		override protected function getCurrentRendererState():String
		{
			return lookLink ? lookLink.status : LookLinkStatus.NOT_LOADED;
		}
		
	]]>
	</fx:Script>
	
	<s:states>
		<s:State name="notLoaded"/>
		<s:State name="loading"/>
		<s:State name="error"/>
		<s:State name="loaded"/>
	</s:states>
	
	<s:Label text="{label}" textAlign="center" verticalAlign="middle" 
		left="5" right="5" top="5" bottom="5" includeIn="notLoaded, loaded"
		textDecoration="underline"/>
	
	<mx:ProgressBar id="progressBar" mode="event" source="{lookLink}" width="80"
		label="" includeIn="loading" horizontalCenter="0" top="20"/>

	<s:Label text="{lookLink.errorText}" left="5" right="5" top="5" bottom="5" 
		textAlign="center" verticalAlign="middle"
		color="{getStyle('errorColor')}" fontSize="9" includeIn="error"/>
	
</s:ItemRenderer>
