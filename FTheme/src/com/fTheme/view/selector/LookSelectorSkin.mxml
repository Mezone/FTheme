<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Metadata>
		[HostComponent("com.fTheme.view.selector.LookSelector")]
	</fx:Metadata>
	
	<s:layout>
		<s:HorizontalLayout verticalAlign="contentJustify" gap="20"/>
	</s:layout>
	
	<s:List id="list" itemRenderer="com.fTheme.view.selector.LookItemRenderer">
		<s:layout>
			<s:HorizontalLayout gap="0"/>
		</s:layout>
	</s:List>
	
	<s:Group id="infoGroup">
		
		<s:Rect left="0" right="0" top="0" bottom="0" fill="{getStyle('contentFill')}"/>
		
		<s:Rect left="0" right="0" top="0" bottom="0" stroke="{getStyle('borderStroke')}"/>
		
		<s:RichEditableText id="infoText" focusEnabled="false" editable="false"
			left="5" right="5" top="5" bottom="5"/>
		
	</s:Group>
	
</s:Skin>
