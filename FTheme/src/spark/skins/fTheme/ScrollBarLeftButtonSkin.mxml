<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	minWidth="{getStyle('scrollBarButtonSize')}" 
	minHeight="{getStyle('scrollBarSize')}"
	visible="{getStyle('scrollBarButtonSize') > 0}">
	
	<fx:Metadata>
		<![CDATA[ 
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata> 
	
	<fx:Script fb:purpose="styling">
		/* Define the symbol fill items that should be colored by the "symbolColor" style. */
		static private const symbols:Array = ["arrowFill1", "arrowFill2"];
		
		override public function get symbolItems():Array {return symbols};
	</fx:Script>
	
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<s:Rect left="1" right="1" top="1" bottom="1"
		fill.up="{getStyle('buttonUpFill')}"
		fill.over="{getStyle('buttonOverFill')}"
		fill.down="{getStyle('buttonDownFill')}"
		fill.disabled="{getStyle('buttonDisabledFill')}"
		radiusX="{getStyle('scrollBarCornerRadius')}" topRightRadiusX="0" bottomRightRadiusX="0"/>
	
	<s:Rect left="0" right="0" top="0" bottom="0"
		stroke="{getStyle('scrollBarStroke')}"
		radiusX="{getStyle('scrrollBarCornerRadius')}" topRightRadiusX="0" bottomRightRadiusX="0"/>
	
	<!-- arrow -->
	<!--- Defines the appearance of the left arrow in the ScrollBar component. -->
	<s:Path horizontalCenter="-1" verticalCenter="0" id="arrow"
		data="M 0.0 3.5 L 7.0 0.0 L 7.0 7.0 L 0.0 3.5">
		<s:fill>
			<s:RadialGradient rotation="90" focalPointRatio="1">    
				<!--- @private
				Defines the first fill color in the ScrollBar component's left arrow. -->
				<s:GradientEntry id="arrowFill1" color="0" alpha="0.65" />
				<!--- @private
				Defines the second fill color in the ScrollBar component's left arrow. -->
				<s:GradientEntry id="arrowFill2" color="0" alpha="0.8" />
			</s:RadialGradient>
		</s:fill>
	</s:Path>            
	
</s:SparkSkin>
